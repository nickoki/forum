<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @link.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @link.url %>
</p>

<a><%= link_to 'Upvote', upvote_link_path(@link), method: :put, class: "btn" %>
  <%= @link.get_upvotes.size %>
</a>
<a>
  <%= link_to 'Downvote', downvote_link_path(@link), method: :put %>
  <%= @link.get_downvotes.size %>
</a>

<%= link_to 'Edit', edit_link_path(@link) %> |
<%= link_to 'Back', links_path %>

<h3><%= @link.comments.count %> Comments</h3>

<div id="comments">
  <%# render :partial => @link.comments %>
  <%= render @link.comments, collection: @comments %>
</div>

<%= form_for [@link, Comment.new] do |f| %>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Add Comment" %>
  </div>
<% end %>
