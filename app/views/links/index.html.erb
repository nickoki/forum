<p id="notice" class="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th colspan="2"></th>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <% if current_user %>
          <td><%= link_to 'Upvote', upvote_link_path(link), method: :put, class: "btn" %>
            <%= link.get_upvotes.size %>
          </td>
          <td>
            <%= link_to 'Downvote', downvote_link_path(link), method: :put %>
            <%= link.get_downvotes.size %>
          </td>
        <% end %>
        <td><%= link.title %></td>
        <td><%= link.url %></td>
        <td><%= link_to 'Show', link %></td>
        <% if link.user == current_user %>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
