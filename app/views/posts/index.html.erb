<p id="notice" class="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if current_user %>
          <td><%= link_to 'Upvote', upvote_post_path(post), method: :put, class: "btn" %>
            <%= post.get_upvotes.size %>
          </td>
          <td><%= link_to 'Remove Vote', remove_vote_post_path(post), method: :put, class: "btn" %>
          </td>
          <td>
            <%= link_to 'Downvote', downvote_post_path(post), method: :put %>
            <%= post.get_downvotes.size %>
          </td>
        <% end %>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
